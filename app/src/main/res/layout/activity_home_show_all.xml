<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.example.daniyal.govava.HomeShowAll">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorHeader"
            android:paddingBottom="35dp"
            android:id="@+id/Relative1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/bac"
                android:id="@+id/ShowAllBck"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="22dp"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/home_logo"
                android:layout_marginTop="22dp"
                android:layout_marginLeft="80dp"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/menitems_cart_notification"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="-15dp">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/search_bar"
                android:focusableInTouchMode="false"
                android:hint=" \tSearch by product"
                android:drawableLeft="@mipmap/searchbar_search_icon"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:id="@+id/HomeShowEdit"
                android:drawableRight="@mipmap/searchbar_cross_icon"

                />


        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5"

        android:layout_marginTop="10dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="APPARELS"
            android:id="@+id/HomeShowApparels"
            android:textStyle="bold"
            android:layout_weight="4.5"
            android:textColor="@color/colorBlack"
            android:layout_marginLeft="20dp"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show more >>"
            android:id="@+id/Showmore"
            android:textStyle="bold"
            android:layout_weight=".5"
            android:layout_gravity="right"
            android:textColor="@color/colorHeader"
            />


    </LinearLayout>


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingRight="10dp"
                android:id="@+id/Relative2"
                >


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:id="@+id/image1"
                    android:src="@mipmap/home_handpickbygovava_one"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FROM"
                    android:id="@+id/From"
                    android:textSize="10dp"
                    android:textColor="@color/colorWhite"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="15dp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$60.00"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:layout_below="@id/From"
                    android:id="@+id/FromPrice"
                    android:textColor="@color/colorWhite"
                    android:layout_marginLeft="30dp"

                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Summer Women \nLong Sleeve"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                    android:layout_below="@id/FromPrice"
                    android:id="@+id/LongText1"
                    android:textColor="@color/colorWhite"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="30dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Loose Chiffon Blouse Clothes"
                    android:textSize="10dp"
                    android:layout_below="@id/LongText1"
                    android:id="@+id/LongText2"
                    android:textColor="@color/colorWhite"
                    android:layout_marginLeft="31dp"
                    android:layout_marginTop="0dp" />





                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/home_showall_three"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="5dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FROM"
                    android:id="@+id/From3"
                    android:textStyle="bold"
                    android:textSize="10dp"
                    android:textColor="@color/colorWhite"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="81dp"
                    android:layout_marginTop="150dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/From3"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="45dp"
                    android:text="$110.00"
                    android:id="@+id/Price3"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                    android:textColor="@color/colorWhite"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/LongText4"
                    android:layout_below="@+id/Price3"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="18dp"
                    android:layout_marginTop="35dp"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                    android:text="Winter Men\nCollection"
                    android:textColor="@color/colorWhite"
                    />





                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/home_showall_two"
                    android:layout_below="@id/image1"
                    android:layout_marginLeft="10dp"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FROM"
                    android:layout_below="@id/image1"
                    android:id="@+id/From2"
                    android:textSize="10dp"
                    android:textColor="@color/colorWhite"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="8dp"
                    android:textStyle="bold"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$200.00"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:layout_below="@id/From2"
                    android:id="@+id/FromPrice2"
                    android:textColor="@color/colorWhite"
                    android:layout_marginLeft="30dp"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Winter Women\nMen Collection"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                    android:layout_below="@id/FromPrice2"
                    android:id="@+id/LongText3"
                    android:textColor="@color/colorWhite"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp" />






            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:id="@+id/Linear1"
                android:layout_below="@id/Relative2"
                android:weightSum="5">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CAMERAS"
                    android:id="@+id/HomeShowCamera"
                    android:textStyle="bold"
                    android:layout_weight="4.5"
                    android:textColor="@color/colorBlack"
                    android:layout_marginLeft="20dp"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Show more >>"
                    android:textStyle="bold"
                    android:id="@+id/HomeshowShowmore"
                    android:layout_weight=".5"
                    android:layout_gravity="right"
                    android:textColor="@color/colorHeader"
                    />






            </LinearLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/Linear1"
                android:paddingBottom="5dp"
                android:paddingRight="10dp"
                android:layout_marginTop="10dp"

                >


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/home_showall_four"
                    android:layout_marginRight="5dp"
                    android:paddingLeft="10dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FROM"
                    android:id="@+id/From4"
                    android:textSize="10dp"
                    android:textColor="@color/colorWhite"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="50dp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$110.00"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:layout_below="@id/From4"
                    android:id="@+id/FromPrice3"
                    android:textColor="@color/colorWhite"
                    android:layout_marginLeft="25dp"

                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/LongText5"
                    android:layout_below="@+id/From4"
                    android:layout_marginTop="35dp"
                    android:layout_marginLeft="25dp"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                    android:text="Winter Men\nCollection"
                    android:textColor="@color/colorWhite"
                    />





                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/home_showall_five"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="5dp"
                        />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FROM"
                    android:id="@+id/From6"
                    android:textStyle="bold"
                    android:textSize="10dp"
                    android:textColor="@color/colorWhite"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="162dp"
                    android:layout_marginTop="15dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/From6"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="140dp"
                    android:text="$110.00"
                    android:id="@+id/Price5"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:textColor="@color/colorWhite"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/LongText6"
                    android:layout_below="@+id/Price5"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="97dp"
                    android:layout_marginTop="35dp"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                    android:text="Winter Men\nCollection"
                    android:textColor="@color/colorWhite"
                    />






            </RelativeLayout>


        </RelativeLayout>







    </ScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="10dp"
        android:layout_marginTop="-60dp"
        android:gravity="right"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ShowAllFilter"
            android:src="@mipmap/filter_btn" />


    </LinearLayout>


</LinearLayout>
